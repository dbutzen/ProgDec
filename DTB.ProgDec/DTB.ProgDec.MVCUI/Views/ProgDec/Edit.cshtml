@model DTB.ProgDec.MVCUI.ViewModels.ProgDecProgramsStudents

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProgDec.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.ProgDec.ProgramName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.ProgDec.ProgramId, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(model => model.ProgDec.ProgramId, new SelectList(Model.Programs, "Id", "Description", Model.ProgDec), null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgDec.ProgramId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProgDec.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.ProgDec.StudentId, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(model => model.ProgDec.StudentId, new SelectList(Model.Students, "Id", "FullName", Model.ProgDec), null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgDec.StudentId, "", new { @class = "text-danger" })
        </div>
    </div>

    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
